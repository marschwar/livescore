.row
  .col-xs-12.scoreboard__period= t("activerecord.values.game.period.#{game.period}")
.row
  .col-xs-12.scoreboard__location= game.location
.row.scoreboard__team_images
  .col-xs-3.scoreboard__team-image.home= team_image game.home_team
  - if game.started?
    .col-xs-2.scoreboard__scores.home= "#{game.total_home}"
    .col-xs-2.scoreboard__scores= "-"
    .col-xs-2.scoreboard__scores.away= "#{game.total_away}"
  - else
    .col-xs-6.scoreboard__game-day
      %span.date= localize game.game_day
      - if game.game_time.present?
        %br
        %span.time=game.game_time
  .col-xs-3.scoreboard__team-image.away= team_image game.away_team
-# Web
- [:home, :away].each do |type|
  .row.hidden-xs
    .col-xs-8
      = possession_marker game, type
      = game.send("#{type}_team").name
    - (1..4).each do |quarter|
      .col-xs-1.scoreboard__period-score= game.score type, quarter

-# Mobile
- [:home, :away].each do |type|
  .row.visible-xs
    .col-xs-4.scoreboard__team{class: type}
      = possession_marker game, type
      = game.send("#{type}_team").abbreviated_name
    - (1..4).each do |quarter|
      .col-xs-2.scoreboard__period-score= game.score type, quarter
