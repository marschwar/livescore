- content_for :js_footer do
  :javascript
    $('.js-livescore').livescore({ type: 'game', interval: 35 })
    $('.js-livescore-notes').livescore({ type: 'notes' })

- title = @game.title
- content_for :title, title

.page-header
  %h1= title
  %p.text-muted= t('games.info.reload_not_neccessary')

.row.livescore.js-livescore{data: {url: "#{game_path @game}"}, class: "#{'started' if @game.started?}"}
  .col-md-6
    = render partial: 'by_line', locals: { game: @game }
    .scoreboard__game
      = render partial: 'game', locals: { game: @game }

    .scoreboard__actions
      - if can? :update_score, @game
        = link_to t('games.links.update_score'), edit_score_game_path(@game), :class => 'btn btn-xs btn-primary'
      - if can? :update, @game
        = link_to t('games.links.update_game'), edit_game_path(@game), :class => 'btn btn-xs btn-default'
      - if can? :create_note, @game
        = link_to t('games.links.create_note'), new_game_note_path(@game), :class => 'btn btn-xs btn-default'
      - if can? :destroy, @game
        = link_to t('games.links.destroy'), game_path(@game), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

  .col-md-6
    = render partial: 'game_notes', locals: { game: @game, notes: @notes }

- if can? :create_supporter, @game
  - content_for :sidebar do
    = render partial: 'game_supporters', locals: { game: @game }
